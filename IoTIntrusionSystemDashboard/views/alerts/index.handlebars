<div class="bg-primary text-white py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-0">{{pageTitle}}</h1>
                <p class="mb-0 opacity-75">View and manage all security alerts</p>
            </div>
            <div>
                <a href='/dashboard' class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-funnel text-primary me-2"></i>Filters
            </h5>
        </div>
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-3">
                    <label for="status" class="form-label">Status</label>
                    <select class="form-select" id="status" name="status">
                        <option value="">All Status</option>
                        <option value="active" {{#eq filters.status "active" }}selected{{/eq}}>Active</option>
                        <option value="resolved" {{#eq filters.status "resolved" }}selected{{/eq}}>Resolved</option>
                        <option value="dismissed" {{#eq filters.status "dismissed" }}selected{{/eq}}>Dismissed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="severity" class="form-label">Severity</label>
                    <select class="form-select" id="severity" name="severity">
                        <option value="">All Severity</option>
                        <option value="low" {{#eq filters.severity "low" }}selected{{/eq}}>Low</option>
                        <option value="medium" {{#eq filters.severity "medium" }}selected{{/eq}}>Medium</option>
                        <option value="high" {{#eq filters.severity "high" }}selected{{/eq}}>High</option>
                        <option value="critical" {{#eq filters.severity "critical" }}selected{{/eq}}>Critical</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="device_id" class="form-label">Device ID</label>
                    <input type="text" class="form-control" id="device_id" name="device_id"
                        value="{{filters.device_id}}" placeholder="Enter device ID">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="bi bi-search me-1"></i>Filter
                    </button>
                    <a href="/alerts" class="btn btn-outline-secondary">
                        <i class="bi bi-x me-1"></i>Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Alerts List -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold">
                <i class="bi bi-bell text-primary me-2"></i>All Security Alerts ({{pagination.totalAlerts}})
            </h5>
        </div>
        <div class="card-body">
            {{#if alerts}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Severity</th>
                            <th>Description</th>
                            <th>Device</th>
                            <th>Source IP</th>
                            <th>Detected At</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each alerts}}
                        <tr>
                            <td>
                                <span class="badge bg-secondary">{{this.type}}</span>
                            </td>
                            <td>
                                <span class="badge bg-{{this.severityBadge}}">{{this.severityText}}</span>
                            </td>
                            <td>{{this.description}}</td>
                            <td>
                                {{#if this.deviceName}}
                                {{this.deviceName}} ({{this.deviceType}})
                                {{else}}
                                <em>Unknown</em>
                                {{/if}}
                            </td>
                            <td>{{this.sourceIp}}</td>
                            <td>{{this.detectedAt}}</td>
                            <td>
                                <span class="badge bg-{{this.statusBadge}}">{{this.statusText}}</span>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {{#if pagination.totalPages}}
            <nav aria-label="Alerts pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    {{#if pagination.hasPrev}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/alerts?page={{pagination.prevPage}}&status={{filters.status}}&severity={{filters.severity}}&device_id={{filters.device_id}}">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <span class="page-link">
                            <i class="bi bi-chevron-left"></i> Previous
                        </span>
                    </li>
                    {{/if}}

                    {{#each (range 1 pagination.totalPages)}}
                    <li class="page-item {{#eq this ../pagination.currentPage}}active{{/eq}}">
                        <a class="page-link"
                            href="/alerts?page={{this}}&status={{filters.status}}&severity={{filters.severity}}&device_id={{filters.device_id}}">{{this}}</a>
                    </li>
                    {{/each}}

                    {{#if pagination.hasNext}}
                    <li class="page-item">
                        <a class="page-link"
                            href="/alerts?page={{pagination.nextPage}}&status={{filters.status}}&severity={{filters.severity}}&device_id={{filters.device_id}}">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <span class="page-link">
                            Next <i class="bi bi-chevron-right"></i>
                        </span>
                    </li>
                    {{/if}}
                </ul>
            </nav>
            {{/if}}
            {{else}}
            <div class="text-center py-5">
                <i class="bi bi-bell-slash text-muted fs-1 mb-3"></i>
                <h5 class="text-muted">No Security Alerts Found</h5>
                <p class="text-muted">There are currently no security alerts matching your criteria.</p>
            </div>
            {{/if}}
        </div>
    </div>
</div>