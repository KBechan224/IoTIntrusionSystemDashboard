<div class="bg-primary text-white py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-0">{{pageTitle}}</h1>
                <p class="mb-0 opacity-75">Manage device settings and monitor activity</p>
            </div>
            <div>
                <a href='/devices' class="btn btn-outline-light me-2">
                    <i class="bi bi-arrow-left me-1"></i>Back to Devices
                </a>
                <a href='/dashboard' class="btn btn-outline-light">
                    <i class="bi bi-house me-1"></i>Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <!-- Device Info -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-info-circle text-primary me-2"></i>Device Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Device Name</label>
                            <p class="mb-0">{{device.name}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Device Type</label>
                            <p class="mb-0">
                                <span class="badge bg-info">{{device.deviceType}}</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">IP Address</label>
                            <p class="mb-0"><code>{{device.ipAddress}}</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">MAC Address</label>
                            <p class="mb-0"><code>{{device.macAddress}}</code></p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Status</label>
                            <p class="mb-0">
                                <span class="badge bg-{{device.statusBadge}}">{{device.statusText}}</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Location</label>
                            <p class="mb-0">{{device.location}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Firmware Version</label>
                            <p class="mb-0">{{device.firmwareVersion}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Last Seen</label>
                            <p class="mb-0">{{device.lastSeen}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Created</label>
                            <p class="mb-0">{{device.createdAt}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Last Updated</label>
                            <p class="mb-0">{{device.updatedAt}}</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Device Controls -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-sliders text-primary me-2"></i>Device Controls
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-primary w-100" disabled>
                                <i class="bi bi-play-circle me-2"></i>Restart Device
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-warning w-100" disabled>
                                <i class="bi bi-tools me-2"></i>Put in Maintenance
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-info w-100" disabled>
                                <i class="bi bi-arrow-clockwise me-2"></i>Update Firmware
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-outline-danger w-100" disabled>
                                <i class="bi bi-x-circle me-2"></i>Disconnect Device
                            </button>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">Device control features are not yet implemented.</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Alerts -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-bell text-primary me-2"></i>Recent Alerts
                    </h5>
                </div>
                <div class="card-body">
                    {{#if recentAlerts}}
                    {{#each recentAlerts}}
                    <div class="d-flex align-items-start border-bottom py-3">
                        <div class="flex-grow-1">
                            <h6 class="mb-1 fw-semibold">{{this.type}}</h6>
                            <p class="text-muted mb-1 small">{{this.description}}</p>
                            <div class="d-flex align-items-center">
                                <small class="text-muted me-2">{{this.detectedAt}}</small>
                                <span class="badge bg-{{this.severityBadge}}">{{this.severityText}}</span>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="text-center py-4">
                        <i class="bi bi-bell-slash text-muted fs-2 mb-2"></i>
                        <p class="text-muted small">No recent alerts for this device.</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>