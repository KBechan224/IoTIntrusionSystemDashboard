<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-shield-x text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="display-4 fw-bold text-danger mb-3">Access Denied</h1>
                    {{#if fromLogin}}
                    <h2 class="h4 mb-4">Login Failed</h2>
                    {{else}}
                    <h2 class="h4 mb-4">Authentication Required</h2>
                    {{/if}}
                    <div class="alert alert-danger border-0" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>
                                {{#if fromLogin}}
                                <h6 class="fw-semibold mb-1">Invalid Credentials</h6>
                                <p class="mb-0">The email or password you entered is incorrect, or your account may be deactivated. Please check your credentials and try again.</p>
                                {{else}}
                                <h6 class="fw-semibold mb-1">Restricted Area</h6>
                                <p class="mb-0">You must be registered and logged in to access this area of the IoT Intrusion Detection System.</p>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="/auth/login" class="btn btn-primary me-2">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Login
                        </a>
                        <a href="/auth/register" class="btn btn-outline-primary me-2">
                            <i class="bi bi-person-plus me-1"></i>Register
                        </a>
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-house me-1"></i>Go Home
                        </a>
                    </div>
                    <div class="mt-4 pt-3 border-top">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            {{#if fromLogin}}
                            Having trouble logging in? Contact your system administrator or try registering for a new account.
                            {{else}}
                            Need access? Contact your system administrator or register for a new account.
                            {{/if}}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>