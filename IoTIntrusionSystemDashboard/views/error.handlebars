<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="display-4 fw-bold text-danger mb-3">{{error.status}}</h1>
                    <h2 class="h4 mb-4">{{message}}</h2>
                    <div class="alert alert-light border" role="alert">
                        <h6 class="fw-semibold mb-2">Error Details:</h6>
                        <pre class="text-start mb-0 small text-muted">{{error.stack}}</pre>
                    </div>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary me-2">
                            <i class="bi bi-house me-1"></i>Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>