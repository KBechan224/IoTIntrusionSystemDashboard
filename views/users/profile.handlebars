<div class="bg-primary text-white py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="mb-0">{{pageTitle}}</h1>
            </div>
            <div>
                <a href='/dashboard' class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-person-circle text-primary me-2"></i>Profile Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Full Name</label>
                            <p class="mb-0">{{profile.name}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email Address</label>
                            <p class="mb-0">{{profile.email}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Role</label>
                            <p class="mb-0">
                                <span class="badge bg-primary">{{profile.role}}</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Account Status</label>
                            <p class="mb-0">
                                {{#if profile.isActive}}
                                    <span class="badge bg-success">Active</span>
                                {{else}}
                                    <span class="badge bg-danger">Inactive</span>
                                {{/if}}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Member Since</label>
                            <p class="mb-0">{{profile.createdAt}}</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Last Login</label>
                            <p class="mb-0">{{profile.lastLogin}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>